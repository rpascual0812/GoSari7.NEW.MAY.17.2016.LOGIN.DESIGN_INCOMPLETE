<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_layout"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@drawable/dark_blue_background"
    >
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

<LinearLayout
    android:layout_marginTop="10dp"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cv_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="40dp">

        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:src="@drawable/ic_profile_account"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"

                />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/Profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :"
                android:textColor="#000000"
                android:textSize="20sp"
                />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/Profile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile :"
                android:textColor="#000000"
                android:textSize="15sp"

                />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/Profile_emailAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email :"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"

                />


            <Button
                android:id="@+id/btn_logout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="LOGOUT"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"

                />
            <EditText
                android:id="@+id/in_oldpassword"
                android:paddingTop="20dp"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:hint="Old Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <EditText
                android:id="@+id/in_newPassWord"
                android:paddingTop="20dp"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:hint="New Password"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <EditText
                android:id="@+id/in_confirmnewPassWord"
                android:paddingTop="20dp"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:hint="Confirm New Password"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btn_ChagePass"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:text="CHANGE PASSWORD"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="40dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
    </ScrollView>
    </RelativeLayout>