<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.android.iit.chrs.gosari.MainActivity">
    <!--android:background="@drawable/new_background_hdpi"-->
    <!--android:id="@+id/LinearLayout_main"-->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_marginTop="550dp"
                android:id="@+id/iv_buildings"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:background="@drawable/new_buildings_mdpi"
                />


                <Button
                   android:layout_above="@+id/iv_gosariIcon"
                    android:id="@+id/btnStart"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/change_background_btn"
                    android:layout_alignLeft="@+id/iv_gosariIcon"
                    android:layout_marginBottom="-20dp"
                    android:layout_marginLeft="70dp"

                    />

                <ImageView
                    android:layout_alignBottom="@+id/iv_buildings"
                    android:layout_centerInParent="true"
                    android:id="@+id/iv_gosariIcon"
                    android:layout_height="180dp"
                    android:layout_width="200dp"
                    android:src="@drawable/starticon"
                    android:layout_marginBottom="70dp"
                    />


        </RelativeLayout>

    </RelativeLayout>


