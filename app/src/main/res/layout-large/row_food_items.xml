<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fffafa">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fffafa">

        <ImageView
            android:id="@+id/thumbnail_FoodItems"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/moving_loading"/>
        <TextView
            android:paddingTop="10dp"
            android:id="@+id/tvItem"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/category"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/thumbnail_FoodItems"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/tvPrice_Items"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/price"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/tvItem"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/tvDeliveryTime_Items"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/delivery_time"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/tvPrice_Items"
            android:textColor="#000000"/>

        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDeliveryTime_Items"
            android:gravity="right"

            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_to_cart"
                    android:textSize="15sp"
                    android:gravity="left"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/round_corner_btn_blue"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>