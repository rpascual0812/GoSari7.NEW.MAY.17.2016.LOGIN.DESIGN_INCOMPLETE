<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="10dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        >

        <TextView

            android:id="@+id/tvCart_Items"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/category"
            android:textSize="10sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/tvCart_Description_Items"
            android:layout_below="@+id/tvCart_Items"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/description"
            android:textSize="10sp"
            android:textColor="#000000"

            />

        <TextView

            android:id="@+id/tvCart_Count"
            android:layout_below="@id/tvCart_Description_Items"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/count"
            android:textSize="15sp"
            android:textColor="#000000"
            />



        <TextView

            android:id="@+id/tvCart_Price_Items"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/price"
            android:textSize="10sp"
            android:textColor="#000000"
            android:gravity="right"
            android:layout_below="@+id/tvCart_Count"


            />
        <TextView

            android:layout_below="@+id/tvCart_Price_Items"
            android:id="@+id/tvCart_DeliveryTime"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/delivery_time"
            android:textSize="10sp"
            android:textColor="#000000"
            />


        <Button
            android:id="@+id/btn_remove"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/tvCart_DeliveryTime"
            android:text="@string/remove"
            android:textSize="10sp"
            android:elevation="3dp"
            android:background="@drawable/round_corner_btn_blue"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#FFFFFF"

            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/btn_remove"
            android:gravity="bottom"

            >
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:contentPadding="10dp"
                card_view:cardCornerRadius="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:elevation="10dp"
                card_view:cardBackgroundColor="@color/colorPrimary"

                >
                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit_white_xhdpi"

                    />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>